<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bghomemobileappblurcolwhite"
              android:orientation="vertical"
              android:weightSum="100">


    <RelativeLayout
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="110"
        >

        <!-- Your RelativeLayout Items -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:paddingTop="40dp"
            android:src="@drawable/drawable"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:context=".MainActivity">

            <View
                android:id="@+id/spacer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="0dp"
                android:layout_toLeftOf="@+id/spacer"
                android:background="@drawable/foodestablishment"
                android:gravity="center"
                android:padding="8dp"
                android:text="Left"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="testing"
                android:layout_alignBottom="@+id/left"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="0dp"
                android:layout_toRightOf="@+id/left"
                android:background="@drawable/foodestablishment"
                android:gravity="center"
                android:padding="8dp"
                android:text="Right"
                android:textSize="18sp"/>

            <View
                android:id="@+id/spacer2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_below="@+id/spacer"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/left2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/left"
                android:layout_margin="0dp"
                android:layout_toLeftOf="@+id/spacer"
                android:background="@drawable/foodestablishment"
                android:gravity="center"
                android:padding="8dp"
                android:text="Left2"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/right2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/right"
                android:layout_margin="0dp"
                android:layout_toRightOf="@+id/left"
                android:background="@drawable/foodestablishment"
                android:gravity="center"
                android:padding="8dp"
                android:text="Right2"
                android:textSize="18sp"
                />

            <View
                android:id="@+id/spacer3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_below="@+id/spacer"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/left3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/left2"
                android:layout_margin="0dp"
                android:layout_toLeftOf="@+id/spacer"
                android:background="@drawable/foodestablishment"
                android:gravity="center"
                android:padding="8dp"
                android:text="Left2"
                android:textSize="18sp"/>


            <TextView
                android:id="@+id/right3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/right2"
                android:layout_margin="0dp"
                android:layout_toRightOf="@+id/left"
                android:background="@drawable/foodestablishment"
                android:gravity="center"
                android:padding="8dp"
                android:text="Right2"
                android:textSize="18sp"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>