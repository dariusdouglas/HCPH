<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_report_issue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:background="@drawable/bghomemobileappblur"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dadouglas.hchealth.ReportIssueActivity">

    <ImageView
        android:id="@+id/homenavbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:paddingTop="0dp"
        android:src="@drawable/homenavbg"></ImageView>


    <TextView
        android:id="@+id/report_an_issue_nav_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/homenavbg"
        android:layout_marginTop="0dp"
        android:background="@android:color/black"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:text="Report an issue"
        android:textColor="#aeaea8"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/enter_business_navbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/report_an_issue_nav_view"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        android:hint="Enter a Business, Place or Address"
        android:paddingLeft="15dp"
        android:textSize="15dp" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/enter_business_navbar"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="3dp"
        android:background="@android:color/darker_gray"
        android:gravity="center_vertical|left"
        android:paddingLeft="10dp"
        android:text="Category:"
        android:textSize="15dp" />

    <Spinner
        android:id="@+id/subject_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enter_business_navbar"
        android:background="@android:color/black" />
</RelativeLayout>
