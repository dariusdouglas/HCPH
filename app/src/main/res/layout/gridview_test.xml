            android:layout_column="0"
            android:layout_row="4"
            android:background="@drawable/healthwellness" />

        <TextView
            android:layout_column="1"
            android:layout_row="4"
            android:background="@drawable/shelterservices" />

        <TextView
            android:layout_column="1"
