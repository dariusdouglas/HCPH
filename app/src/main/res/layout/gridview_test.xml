            android:text="Food Establishments"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_column="1"
            android:layout_row="3"
            android:background="@drawable/reportissues" />
