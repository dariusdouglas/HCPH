<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bghomemobileappblurcolwhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/drawable" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            android:weightSum="3"
            android:padding="3dp">

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_weight=".25"
                    android:background="@drawable/foodestablishment"
                    android:padding="18dip"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="startMapsActivity"
                    />

                <TextView
                    android:id="@+id/TextView05"
                    android:layout_weight="1"
                    android:background="@drawable/reportissues"
                    android:padding="18dip"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="startReportIssueActivity"/>
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/TextView06"
                    android:layout_weight="1"
                    android:background="@drawable/healthwellness"
                    android:padding="18dip"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/TextView07"
                    android:layout_weight="1"
                    android:background="@drawable/shelterservices"
                    android:padding="18dip"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="startAnimalServicesActivity"/>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:gravity="center_horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/TextView08"
                    android:layout_weight="1"
                    android:background="@drawable/preparednessresponse"
                    android:padding="18dip"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/TextView09"
                    android:layout_weight="1"
                    android:background="@drawable/mc"
                    android:padding="18dip"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </TableRow>


        </TableLayout>


    </LinearLayout>
</LinearLayout>